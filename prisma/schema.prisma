generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
    
}

model Project {
    id        String   @id @default(cuid())
    name      String
    storyData String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    assets    Asset[]
}

model Asset {
    id        String   @id @default(cuid())
    type      String
    url       String
    projectId String
    project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
    createdAt DateTime @default(now())
}